<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Title</th>
      <th>Description</th>
      <th>Published at</th>
      <th>Guid</th>
      <th>Feed</th>
      <th>Category</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.url %></td>
        <td><%= item.title %></td>
        <td><%= item.description.html_safe %></td>
        <td><%= item.published_at %></td>
        <td><%= item.guid %></td>
        <td><%= link_to item.feed.title, item.feed %></td>
        <td><%= item.category %></td>
        <td><%= item.comments %></td>
        <td><%= link_to 'Show', feed_item_url(item.feed, item) %></td>
        <td><%= link_to 'Edit', edit_feed_item_path(item.feed, item) %></td>
        <td><%= link_to 'Destroy', feed_item_url(item.feed,item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_feed_item_path %>
